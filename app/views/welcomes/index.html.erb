
  <div class='xs-spacer'></div>
  <div class='news-item'>
    <% if @main_welcome[0] %>
    <div class='news-header2 transparent-dark text-center'><%= @main_welcome[0].headline.html_safe %></div>
      <figure class='hanger remove-padding figure col-xs-12 col-sm-6'>
        <%= image_tag 'hanger',
          class: 'remove-padding col-xs-10 figure-img img-fluid img-rounded',
          alt:"A picture of crumpled and misaligned boxes and shapes and another
               picture of the same shapes hanging in line from above on a hook."%>
      </figure>

      <p class='transparent-light news-notes'><%= @main_welcome[0].notes.html_safe %></p>
    <% end %>
    <div class='news-item'>
      <% @welcomes.each do |welcome| %>
        <% unless (welcome.role == 'main' || welcome.role == 'hidden') %>
          <%  if welcome.title %>
              <div class="news-header2 transparent-dark text-center">
                <h2><%= welcome.title.html_safe %></h2>
              </div>
          <% end %>
          <div class='row'>
            <figure class='back col-md-2 col-md-6 col-sm-6 col-xs-6'>
              <%= image_tag 'SuperFicial-Back.png', class:'super-ficial-back col-md-12' %>
            </figure>
            <figure class='front col-md-2 col-md-6 col-sm-6 hidden-xs hidden-sm'>
              <%= image_tag 'front', class:'super-ficial-front col-md-12' %>
            </figure>

            <div class='news-headline text-center col-md-4 col-sm-5 col-xs-5'>
              <%= render html: welcome.headline.html_safe %>
            </div>

            <figure class='front mobile col-md-4 col-sm-6 col-xs-6 pull-right hidden-md hidden-lg hidden-xl'>
              <%= image_tag 'front', class:'super-ficial-front col-md-12' %>
            </figure>
            <%= render html: welcome.notes.html_safe %>
          </div>
        <% end %>
      <% end %>
    </div>

  </div>
<div class='xs-spacer'></div>
