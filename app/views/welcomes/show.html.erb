<%- model_class = Welcome -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @welcome.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:notes) %></dt>
      <dd><pre class="prettyprint"><%= @welcome.notes %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:headline) %></dt>
      <dd><pre class="prettyprint"><%= @welcome.headline %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:role) %></dt>
      <dd><pre class="prettyprint"><%= @welcome.role %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              welcomes_path, :"data-no-turbolink" => 'true', :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_welcome_path(@welcome), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              welcome_path(@welcome),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
